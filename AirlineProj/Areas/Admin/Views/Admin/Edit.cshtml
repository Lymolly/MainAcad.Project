<div>Passengers</div>
<table class="table table-striped table-bordered table-condensed table-responsive">
    <thead>
    <tr>
        <th>
            Passenger name
        </th>
        <th>
            Passenger Age
        </th>
        <th>
            Passenger gender
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Passengers)
     {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Age</td>
            <td>@item.Gender</td>
        </tr>
     }
    </tbody>
</table>