
@model AirlineProj.Models.InfosViewModels.InfoViewModel
@{
    ViewBag.Title = "Buy";
}

<h2>Buy a ticket to <strong>@Model.Route.Destination</strong> flight<br />For : @Model.Price hrivnas.</h2>

<style>
    input {
        background-color: #ff6a00;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: flex;
        font-size: 16px;
        margin-left: 30px;
        border-radius: 4px;
    }
    input:hover {
        background-color: darkgoldenrod;
        cursor: pointer;
    }
</style>
<div>
    Now is @Model.Passengers.Count() on plane,available: @(Model.Plane.Capacity - Model.Passengers.Count()) / @Model.Plane.Capacity. 
</div>
<div>
    @using (Html.BeginForm("Buy", "Airline", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Plane)

        @Html.HiddenFor(model => model.FlightStatus)

        @Html.HiddenFor(model => model.Gate)

        @Html.HiddenFor(model => model.Route)

        @Html.HiddenFor(model => model.Terminal)

        @Html.HiddenFor(model => model.Passengers)

        @Html.HiddenFor(model => model.FlightNumber)
        <input type="submit" class="btn btn-primary" value="Buy" />
    }
    <input type="button" class="btn btn-primary" value="Go back" onclick="location.href = '@Url.Action("AllInfo", "Airline")'" />
</div>
