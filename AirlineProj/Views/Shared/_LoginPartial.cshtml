@using Microsoft.AspNet.Identity
<div class="regnav">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Здравствуйте " + User.Identity.GetUserName() + "!", "GetName", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>
        }
    }
    else
    {

        <ul>
            <li>@Html.ActionLink("Sign up", "Register", "Account")</li>
            <li>@Html.ActionLink("Sign in", "Login", "Account")</li>
        </ul>
    }
</div>